<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/padding_top"
    android:background="@drawable/background"
    tools:context=".ui.home.HomeFragment">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/study_list_background"
        android:visibility="gone"
        app:layout_constraintVertical_bias="1.2"
        android:src="@drawable/my_study_recycler_view_background2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintBottom_toBottomOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_max="400dp"
        app:layout_constraintWidth_min="300dp"
        android:layout_marginBottom="@dimen/nav_view_height"
        android:layout_marginHorizontal="30dp">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/layout1"
                    app:layout_constraintTop_toTopOf="parent"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/subtitle"
                        android:layout_gravity="center_vertical"
                        android:text="오늘의 공부 기록"
                        style="@style/SubTitleStyle" />
                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/text_today_study_record"
                        android:textColor="@color/title"
                        android:textSize="24sp"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/gmarket_sans"
                        android:textStyle="bold"
                        android:text="00:00" />
                </LinearLayout>
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:id="@+id/layout2"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal"
                    android:scrollbars="none"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/layout1"
                    app:layout_constraintEnd_toEndOf="parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <Button
                            android:layout_width="60dp"
                            android:layout_height="22dp"
                            android:id="@+id/btn_chart_daily"
                            android:layout_marginHorizontal="10dp"
                            style="@style/ButtonChart"
                            android:text="Daily" />
                        <Button
                            android:layout_width="70dp"
                            android:layout_height="22dp"
                            android:id="@+id/btn_chart_weekly"
                            android:layout_marginHorizontal="7dp"
                            style="@style/ButtonChartUnselected"
                            android:text="Weekly" />
                        <Button
                            android:layout_width="80dp"
                            android:layout_height="22dp"
                            android:id="@+id/btn_chart_monthly"
                            android:layout_marginHorizontal="8dp"
                            style="@style/ButtonChartUnselected"
                            android:text="Monthly" />
                        <Button
                            android:layout_width="90dp"
                            android:layout_height="22dp"
                            android:id="@+id/btn_chart_room"
                            android:layout_marginHorizontal="5dp"
                            style="@style/ButtonChartUnselected"
                            android:text="스터디룸별" />
                    </LinearLayout>


                </ScrollView>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:id="@+id/chart_layout"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@id/layout2">
                    <com.github.mikephil.charting.charts.BarChart
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/chart_study_time" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/inner_chart_layout"
                        android:orientation="vertical"
                        android:visibility="gone">
                        <com.github.mikephil.charting.charts.HorizontalBarChart
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:id="@+id/horizontal_chart_study_time" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:gravity="center"
                                style="@style/nanum_bold_small_white"
                                android:textSize="@dimen/normal_text_size"
                                android:text="1"
                                android:background="@drawable/my_study_ranking_background" />
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="25dp"
                                android:src="@drawable/ic_study_first_bar"
                                android:layout_marginHorizontal="15dp" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="25dp"
                                android:id="@+id/study_first_ranking"
                                android:text="스터디1"
                                style="@style/my_study_ranking" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:gravity="center"
                                style="@style/nanum_bold_small_white"
                                android:textSize="@dimen/normal_text_size"
                                android:text="2"
                                android:background="@drawable/my_study_ranking_background" />
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="25dp"
                                android:src="@drawable/ic_study_second_bar"
                                android:layout_marginHorizontal="15dp" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="25dp"
                                android:id="@+id/study_second_ranking"
                                android:text="스터디2"
                                style="@style/my_study_ranking" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:gravity="center"
                                style="@style/nanum_bold_small_white"
                                android:textSize="@dimen/normal_text_size"
                                android:text="3"
                                android:background="@drawable/my_study_ranking_background" />
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="25dp"
                                android:src="@drawable/ic_study_third_bar"
                                android:layout_marginHorizontal="15dp" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="25dp"
                                android:id="@+id/study_third_ranking"
                                android:text="스터디3"
                                style="@style/my_study_ranking" />
                        </LinearLayout>

                    </LinearLayout>
                </FrameLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/subtitle2"
                    app:layout_constraintTop_toBottomOf="@id/chart_layout"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center_vertical"
                    android:text="나의 스터디룸"
                    style="@style/SubTitleStyle" />

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:id="@+id/study_list_recycler_view"
                    android:layout_marginTop="20dp"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/subtitle2" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:id="@+id/empty_study_list_layout"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@id/subtitle2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="40dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/text1"
                        android:text="아직 가입한 스터디룸이 없어요!"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:fontFamily="@font/nanum_gothic_extra_bold_font"
                        android:textSize="@dimen/small_text_size" />
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:id="@+id/button_add_study"
                        android:layout_marginTop="50dp"
                        android:background="@drawable/button_add_study" />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>