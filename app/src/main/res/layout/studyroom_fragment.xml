<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/background"
xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/layout"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="30dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/text_title"
            android:text="타이틀"
            style="@style/Title"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_board"
            android:layout_gravity="center_vertical|end" />
    </FrameLayout>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:id="@+id/image1"
        android:src="@drawable/ic_speaker"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout"
        android:layout_marginStart="30dp"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:id="@+id/text_notice"
        app:layout_constraintTop_toBottomOf="@id/layout"
        app:layout_constraintStart_toEndOf="@id/image1"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="5dp"
        android:background="@drawable/bg_square_notice"
        android:textColor="@color/white"
        android:fontFamily="@font/nanum_gothic_font"
        android:textSize="@dimen/small_text_size"
        android:text="공지사항"
        android:gravity="center"
        android:maxLines="1" />

    <FrameLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/layout1"
        app:layout_constraintTop_toBottomOf="@id/text_notice"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/bg_personal_ranking" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TOP"
                android:textSize="10sp"
                android:textColor="@color/white"
                android:fontFamily="@font/gamrket_sans_font"
                android:textStyle="bold"
                android:layout_marginTop="25dp"
                android:textAlignment="center" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:id="@+id/text_ranking"
                android:text="121"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:fontFamily="@font/gamrket_sans_extra_bold_font"
                android:textStyle="bold"
                android:layout_marginTop="3dp" />
        </LinearLayout>
    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text1"
        app:layout_constraintTop_toBottomOf="@id/layout1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:text="스터디룸 전체 누적 기록"
        style="@style/NormalMessage"
        android:textColor="@color/signUpHint"
        android:textStyle="bold" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_total_study_time"
        app:layout_constraintTop_toBottomOf="@id/text1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:text="147:02:41"
        style="@style/NormalMessageAccent"
        android:textStyle="bold"
        android:textSize="28sp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:id="@+id/layout_today_ranking"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/layout_question_board"
        app:layout_constraintTop_toBottomOf="@id/text_total_study_time"
        android:layout_marginTop="50dp" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="오늘의 랭킹"
            style="@style/NormalMainThemeMessageAccent"
            android:textSize="@dimen/large_text_size"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/mainTheme2"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:id="@+id/layout_question_board"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/layout_today_ranking"
        app:layout_constraintTop_toBottomOf="@id/text_total_study_time"
        android:layout_marginTop="50dp" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="질문 게시판"
            style="@style/NormalMainThemeMessageAccent"
            android:textColor="#77FFFFFF"
            android:textSize="@dimen/large_text_size"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#292929"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:id="@+id/layout2"
        app:layout_constraintTop_toBottomOf="@id/layout_today_ranking"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="50dp"
        android:layout_marginStart="30dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_today_ranking"
            android:src="@drawable/ic_members" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_member_count"
            android:text="165"
            android:layout_marginStart="10dp"
            android:layout_marginTop="2dp"
            style="@style/NormalMessageAccent" />
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/recyclerview_member_records"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintTop_toBottomOf="@id/layout2"
        android:layout_marginTop="20dp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/view_bg_disable"
        android:background="#66000000"
        android:visibility="visible" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/layout_study_create_category"
        android:gravity="center_vertical"
        android:elevation="3dp"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/bg_pop_layout" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/btn_start"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="00:00"
            android:textSize="28sp"
            android:fontFamily="@font/gmarket_sans_bold"
            android:textColor="@color/white" />
        <Button
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/btn_start"
            android:layout_marginBottom="30dp"
            android:layout_marginHorizontal="20dp"
            android:maxWidth="350dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            style="@style/ButtonFilled"
            android:text="공부 시작하기" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
