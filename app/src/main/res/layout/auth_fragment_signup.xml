<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintWidth_max="400dp"
            app:layout_constraintWidth_min="300dp"
            android:layout_marginHorizontal="30dp" >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="30dp"
                    android:id="@+id/signup_title"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="@string/auth_signup"
                    style="@style/Title"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toBottomOf="@id/signup_title"
                    android:layout_marginTop="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:id="@+id/layout_idcard_info"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:text="이름"
                            style="@style/TextInputTitle" />
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/signup_edit_name"
                            style="@style/TextInput" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:text="학부/학과"
                            style="@style/TextInputTitle" />
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/signup_edit_major"
                            style="@style/TextInput" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:text="학번"
                            style="@style/TextInputTitle" />
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/signup_edit_student_id"
                            android:maxLength="8"
                            android:inputType="number"
                            style="@style/TextInput" />
                    </LinearLayout>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/auth_layout_signup_info"
                    app:layout_constraintTop_toBottomOf="@+id/layout_idcard_info"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="아이디"
                            style="@style/TextInputTitle" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="2dp"
                            android:text="*"
                            android:textColor="@color/error"
                            android:textSize="14sp" />
                    </LinearLayout>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="41dp"
                        android:id="@+id/signup_edit_email"
                        android:hint="@string/auth_signup_email"
                        android:inputType="textEmailAddress"
                        style="@style/AuthSignUpEditViewStyle"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/signup_text_error_email"
                        style="@style/ErrorText"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="비밀번호"
                            style="@style/TextInputTitle" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="2dp"
                            android:text="*"
                            android:textColor="@color/error"
                            android:textSize="14sp" />
                    </LinearLayout>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="41dp"
                        android:id="@+id/signup_edit_pw"
                        android:hint="@string/auth_signup_pw"
                        android:inputType="textPassword"
                        style="@style/AuthSignUpEditViewStyle"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/signup_text_error_pw"
                        style="@style/ErrorText"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="비밀번호 확인"
                            style="@style/TextInputTitle" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="2dp"
                            android:text="*"
                            android:textColor="@color/error"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="41dp"
                        android:id="@+id/signup_edit_pw_check"
                        style="@style/AuthSignUpEditViewStyle"
                        android:inputType="textPassword" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/signup_text_error_pw_check"
                        style="@style/ErrorText"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="학적정보"
                            style="@style/TextInputTitle" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="2dp"
                            android:text="*"
                            android:textColor="@color/error"
                            android:textSize="14sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <RadioGroup
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:id="@+id/auth_radio_gorup_attendance"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp">
                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/radio_attend"
                                android:button="@drawable/radio_button_grey_mint"
                                android:text="  재학"
                                android:textColor="@color/white"
                                android:layout_marginEnd="20dp"/>
                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/radio_take_off"
                                android:text="  휴학"
                                android:button="@drawable/radio_button_grey_mint"
                                android:textColor="@color/white" />
                        </RadioGroup>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="생년월일"
                            style="@style/TextInputTitle" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/auth_layout_birthday">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="41dp"
                            android:id="@+id/signup_edit_birth_year"
                            android:layout_weight="3"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            style="@style/AuthSignUpEditViewStyle"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="년"
                            android:layout_marginHorizontal="5dp"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/white"
                            android:textSize="16sp" />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="41dp"
                            android:id="@+id/signup_edit_birth_month"
                            android:layout_weight="2"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="10dp"
                            android:gravity="center"
                            style="@style/AuthSignUpEditViewStyle" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="5dp"
                            android:text="월"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/white"
                            android:textSize="16sp" />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="41dp"
                            android:id="@+id/signup_edit_birth_day"
                            android:layout_weight="2"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="10dp"
                            android:gravity="center"
                            style="@style/AuthSignUpEditViewStyle" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="일"
                            android:layout_marginHorizontal="5dp"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="약관동의"
                            style="@style/TextInputTitle" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="2dp"
                            android:text="*"
                            android:textColor="@color/error"
                            android:textSize="14sp" />
                    </LinearLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/auth_text_agreement"
                            android:text="이용약관 동의"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            style="@style/TextInputTitle" />

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/auth_checkbox_agreement"
                            android:clickable="false"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginEnd="20dp"
                            android:button="@drawable/radio_button_grey_mint" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/auth_text_show_agreement"
                        android:text="@string/auth_show_agreement"
                        android:textColor="#838383"
                        android:fontFamily="@font/nanum_gothic_font"/>
                </LinearLayout>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:id="@+id/auth_button_request_signup"
                    app:layout_constraintTop_toBottomOf="@+id/auth_layout_signup_info"
                    android:text="가입하기"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="20dp"
                    android:enabled="false"
                    style="@style/ButtonDisabled" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>