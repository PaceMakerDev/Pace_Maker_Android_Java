<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.ssutudy.study.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_main_home" >
        <action
            android:id="@+id/action_navigation_home_to_navigation_settings"
            app:destination="@id/navigation_settings" />
        <action
            android:id="@+id/action_navigation_home_to_navigation_mystudy2"
            app:destination="@id/navigation_mystudy" />
    </fragment>

    <fragment
        android:id="@+id/navigation_mystudy"
        android:name="com.example.ssutudy.study.ui.mystudy.MyStudyFragment"
        android:label="@string/title_mystudy"
        tools:layout="@layout/fragment_dashboard" >
        <action
            android:id="@+id/action_navigation_mystudy_to_navigation_home"
            app:destination="@id/navigation_home" />
        <action
            android:id="@+id/action_navigation_mystudy_to_navigation_settings"
            app:destination="@id/navigation_settings" />
    </fragment>

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.example.ssutudy.study.ui.settings.SettingsFragment"
        android:label="@string/title_settings"
        tools:layout="@layout/fragment_notifications" >
        <action
            android:id="@+id/action_navigation_settings_to_navigation_mystudy"
            app:destination="@id/navigation_mystudy" />
        <action
            android:id="@+id/action_navigation_settings_to_navigation_home"
            app:destination="@id/navigation_home" />
    </fragment>
</navigation>