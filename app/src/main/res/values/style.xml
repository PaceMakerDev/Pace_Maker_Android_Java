<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SpinnerDatePickerStyle" parent="android:Theme.Material.Dialog">
        <item name="android:datePickerStyle">@style/SpinnerDatePicker</item>
    </style>
    <style name="SpinnerDatePicker" parent="android:Widget.Material.DatePicker">
        <item name="android:datePickerMode">spinner</item>
    </style>
    <style name="SpinnerTimePickerStyle" parent="android:Theme.Material.Dialog">
        <item name="android:timePickerStyle">@style/SpinnerTimePickerTheme</item>
    </style>
    <style name="SpinnerTimePickerTheme" parent="android:Widget.Material.Light.TimePicker">
        <item name="android:timePickerMode">spinner</item>
    </style>



    <!--Button-->
    <style name="ButtonStyle">
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/nanum_gothic_extra_bold_font</item>
    </style>
    <style name="ButtonFilled" parent="ButtonStyle">
        <item name="android:background">@drawable/button_filled_maintheme</item>
        <item name="android:textColor">@color/buttonFilledText</item>
    </style>
    <style name="ButtonLine" parent="ButtonStyle">
        <item name="android:background">@drawable/button_line_maintheme</item>
        <item name="android:textColor">@color/buttonLineText</item>
    </style>
    <style name="ButtonDisabled" parent="ButtonStyle">
        <item name="android:background">@drawable/button_filled_disabled</item>
        <item name="android:textColor">@color/buttonDisabledText</item>
    </style>
    <style name="ButtonChart">
        <item name="fontFamily">@font/nanum_gothic_extra_bold_font</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColor">@color/buttonChartSelected</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/edittext_with_hint</item>
    </style>
    <style name="ButtonChartUnselected" parent="ButtonChart">
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/buttonChartUnselected</item>
    </style>

    <!--EditText-->
    <style name="EditTextWithHint">
        <item name="android:background">@drawable/edittext_with_hint</item>
        <item name="android:textColor">@color/inputText</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:fontFamily">@font/nanum_gothic_font</item>
    </style>
    <style name="AuthSignUpEditViewStyle" parent="@style/EditTextWithHint">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColorHint">@color/signUpHint</item>
        <item name="android:layout_marginBottom">7dp</item>
    </style>
    <style name="AuthLoginEditViewStyle" parent="@style/EditTextWithHint">
        <item name="android:textColorHint">@color/loginHint</item>
        <item name="android:layout_marginBottom">7dp</item>
    </style>
    <style name="EditTextStudyCreate">
        <item name="android:background">@color/edit_text_study</item>
        <item name="android:textColorHint">@color/textEditTextHint</item>
        <item name="android:fontFamily">@font/nanum_gothic</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/text_general</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
    </style>




    <!--TextView-->
    <style name="NormalMessage">
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textColor">@color/text_general</item>
        <item name="android:fontFamily">@font/nanum_gothic_bold</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="NormalMessageAccent" parent="NormalMessage">
        <item name="android:fontFamily">@font/nanum_gothic_extra_bold_font</item>
    </style>
    <style name="NormalMainThemeMessageAccent" parent="NormalMessageAccent">
        <item name="android:textColor">@color/mainTheme2</item>
    </style>
    <style name="ErrorText">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColor">@color/error</item>
        <item name="android:visibility">gone</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="fontFamily">@font/nanum_gothic_font</item>
    </style>
    <style name="NormalErrorMessage">
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textColor">@color/error</item>
        <item name="fontFamily">@font/nanum_gothic_font</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Title">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/title</item>
        <item name="fontFamily">@font/nanum_gothic_font</item>
    </style>
    <style name="TextInput">
        <item name="android:fontFamily">@font/nanum_gothic_font</item>
        <item name="android:textColor">@color/inputText</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
    </style>
    <style name="TextPopLayoutCategory" parent="TextInputTitle">
        <item name="android:gravity">center</item>
    </style>
    <style name="TextPopLayoutCategorySelected" parent="TextPopLayoutCategory">
        <item name="android:textColor">@color/studyCreateCategorySelected</item>
        <item name="android:textSize">@dimen/large_text_size</item>
    </style>
    <style name="TextInputTitle" parent="TextInput">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/nanum_gothic_extra_bold_font</item>
    </style>
    <style name="SubTitleStyle">
        <item name="android:textColor">@color/title</item>
        <item name="android:textSize">@dimen/sub_title</item>
        <item name="android:fontFamily">@font/nanum_gothic_extra_bold_font</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="my_study_ranking" parent="nanum_bold_small_white">
        <item name="maxLines">1</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="TextStudyCreateAlarm">
        <item name="android:textColor">@color/text_general</item>
        <item name="android:fontFamily">@font/nanum_gothic_font</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:layout_gravity">center_horizontal|top</item>
    </style>
    <style name="TextStudyCreateAlarmDetail">
        <item name="android:textColor">@color/text_general</item>
        <item name="android:fontFamily">@font/nanum_gothic_font</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/large_text_size</item>
    </style>
    <style name="TextStudyCreateAlarmDetailBtn" parent="TextStudyCreateAlarmDetail">
        <item name="android:textColor">@color/studyCreateDetailBtnUnselected</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/btn_study_create_alarm_detail</item>
    </style>
    <style name="TextStudyCreateAlarmTime" parent="EditTextStudyCreate">
        <item name="android:textSize">@dimen/large_text_size</item>
    </style>

    <!-- ImageView -->
    <style name="ImageCategoryCheck" >
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:src">@drawable/ic_category_check</item>
    </style>

    <!-- Base -->
    <style name="nanum_bold_small_white">
        <item name="android:fontFamily">@font/nanum_gothic</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColor">#ffffff</item>
    </style>



</resources>