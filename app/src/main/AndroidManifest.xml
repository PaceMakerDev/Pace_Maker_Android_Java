<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pacemaker">
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:usesCleartextTraffic="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PaceMaker">

        <activity android:name=".study.StudyActivity"
            android:launchMode="singleTask" />
        <activity android:name=".auth.ui.signup.AgreementActivity"
            android:launchMode="singleTop" />
        <activity android:name=".studyoverview.StudyOverviewActivity"
            android:launchMode="singleTop" />
        <activity android:name=".studyoverview.ui.studyroom.StudyRoomActivity"
            android:launchMode="singleTop" />
        <activity android:name=".studyoverview.ui.studyroom.StudyCameraActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".auth.AuthActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>