<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_max="400dp"
        app:layout_constraintWidth_min="300dp"
        android:layout_marginHorizontal="30dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:id="@+id/title"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/title_email_certification"
            style="@style/Title"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/message1"
            android:layout_marginTop="30dp"
            android:layout_marginStart="5dp"
            app:layout_constraintTop_toBottomOf="@id/title"
            android:text="@string/auth_sending_code_message"
            android:lineHeight="22dp"
            style="@style/NormalMessage" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/subtitle1"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@id/message1"
            android:text="학교 이메일"
            style="@style/NormalMessageAccent" />




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout1"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/subtitle1"
            >
            <EditText
                android:layout_width="0dp"
                android:layout_height="41dp"
                android:id="@+id/auth_edit_email"
                android:layout_weight="3"
                android:inputType="text"
                style="@style/AuthLoginEditViewStyle" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/text_email_fixed"
                android:layout_weight="2"
                android:textAlignment="center"
                android:text="\@ soongsil.ac.kr"
                style="@style/NormalMessageAccent"/>
        </LinearLayout>
        <Button
            android:layout_width="85dp"
            android:layout_height="48dp"
            android:id="@+id/btn_send_code"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/layout1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="코드 전송"
            android:background="@drawable/btn_bg_transparent_border_maintheme"
            style="@style/NormalMainThemeMessageAccent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_code_subtitle"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@id/edit_code"
            android:textAlignment="center"
            android:text="인증코드"
            android:visibility="gone"
            style="@style/NormalMessageAccent" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:id="@+id/edit_code"
            android:layout_marginBottom="60dp"
            app:layout_constraintBottom_toTopOf="@id/btn_authenticate"
            android:inputType="text"
            android:visibility="gone"
            style="@style/AuthLoginEditViewStyle" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_error"
            android:layout_marginBottom="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="gone"
            android:text="인증코드가 올바르지 않습니다"
            android:textAlignment="center"
            app:layout_constraintBottom_toTopOf="@+id/btn_authenticate"
            style="@style/NormalErrorMessage" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/btn_authenticate"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="50dp"
            android:enabled="false"
            style="@style/ButtonDisabled"
            android:text="@string/authenticate" />




    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>