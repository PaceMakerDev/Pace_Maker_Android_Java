<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/padding_top"
    android:background="@drawable/background"
    tools:context=".ui.home.HomeFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_max="700dp"
        app:layout_constraintWidth_min="300dp"
        android:layout_marginHorizontal="30dp">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/title"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="스터디룸 만들기"
                    style="@style/Title" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/subtitle1"
                    android:text="스터디룸명"
                    app:layout_constraintTop_toBottomOf="@id/title"
                    android:layout_marginTop="30dp"
                    style="@style/TextInputTitle" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:id="@+id/study_create_edit_study_name"
                    app:layout_constraintTop_toBottomOf="@id/subtitle1"
                    android:layout_marginTop="5dp"
                    android:maxLines="1"
                    style="@style/EditTextStudyCreate"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/subtitle2"
                    android:text="스터디룸 메이커"
                    app:layout_constraintTop_toBottomOf="@id/study_create_edit_study_name"
                    android:layout_marginTop="50dp"
                    style="@style/TextInputTitle" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/subtitle3"
                    app:layout_constraintTop_toBottomOf="@id/subtitle2"
                    android:layout_marginTop="5dp"
                    android:text="스터디룸의 신뢰도를 위해 실명이 공개됩니다."
                    android:textColor="@color/text_general"
                    android:textSize="@dimen/small_text_size"
                    android:fontFamily="@font/nanum_gothic"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textview_user_name"
                    app:layout_constraintTop_toBottomOf="@id/subtitle3"
                    android:layout_marginTop="10dp"
                    android:textAlignment="textEnd"
                    android:text="김지원"
                    style="@style/TextInputTitle"
                    android:textSize="@dimen/large_text_size" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/layout1"
                    android:orientation="horizontal"
                    android:layout_marginTop="50dp"
                    android:gravity="center_vertical"
                    app:layout_constraintTop_toBottomOf="@id/textview_user_name">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/subtitle4"
                        android:text="스터디룸 인원수"
                        style="@style/TextInputTitle" />
                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/view1"
                        android:text="최대"
                        style="@style/TextInputTitle" />
                    <EditText
                        android:layout_width="100dp"
                        android:layout_height="41dp"
                        android:background="@drawable/edittext_with_hint"
                        android:layout_marginHorizontal="5dp"
                        android:text="0"
                        android:textAlignment="center"
                        android:textColor="@color/text_general"
                        android:fontFamily="@font/nanum_gothic_extra_bold_font"
                        android:textStyle="bold"
                        android:inputType="number"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/view2"
                        android:text="명"
                        app:layout_constraintTop_toBottomOf="@id/textview_user_name"
                        app:layout_constraintEnd_toEndOf="parent"
                        style="@style/TextInputTitle" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/subtitle5"
                    android:text="스터디 종류"
                    app:layout_constraintTop_toBottomOf="@id/layout1"
                    android:layout_marginTop="50dp"
                    style="@style/TextInputTitle" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:id="@+id/edit_study_category"
                    app:layout_constraintTop_toBottomOf="@id/subtitle5"
                    android:layout_marginTop="5dp"
                    android:maxLines="1"
                    android:paddingStart="20dp"
                    android:hint="종류를 선택해주세요"
                    style="@style/EditTextStudyCreate"
                    android:drawableEnd="@drawable/reversed_triangle"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/subtitle6"
                    android:text="스터디 알림 설정"
                    app:layout_constraintTop_toBottomOf="@id/edit_study_category"
                    android:layout_marginTop="50dp"
                    style="@style/TextInputTitle" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@id/view1"
                    app:layout_constraintTop_toBottomOf="@id/subtitle6"
                    android:layout_marginTop="10dp"
                    android:text="스터디 시간에 스터디원에게 알림이 갑니다"
                    android:textColor="@color/text_general"
                    android:textSize="@dimen/small_text_size"
                    android:fontFamily="@font/nanum_gothic"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>