<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/padding_top"
    android:background="@drawable/background"
    tools:context=".ui.home.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_max="400dp"
        app:layout_constraintWidth_min="300dp"
        android:layout_marginHorizontal="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout1"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/temp"
                android:layout_gravity="center_vertical"
                android:text="오늘의 공부 기록"
                style="@style/SubTitleStyle" />
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_today_study_record"
                android:textColor="@color/title"
                android:textSize="24sp"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/gmarket_sans"
                android:textStyle="bold"
                android:text="00:00" />
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/layout2"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:scrollbars="none"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout1"
            app:layout_constraintEnd_toEndOf="parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:layout_width="60dp"
                    android:layout_height="22dp"
                    android:id="@+id/btn_chart_daily"
                    android:layout_marginHorizontal="10dp"
                    style="@style/ButtonChart"
                    android:text="Daily" />
                <Button
                    android:layout_width="70dp"
                    android:layout_height="22dp"
                    android:id="@+id/btn_chart_weekly"
                    android:layout_marginHorizontal="7dp"
                    style="@style/ButtonChartUnselected"
                    android:text="Weekly" />
                <Button
                    android:layout_width="80dp"
                    android:layout_height="22dp"
                    android:id="@+id/btn_chart_monthly"
                    android:layout_marginHorizontal="8dp"
                    style="@style/ButtonChartUnselected"
                    android:text="Monthly" />
                <Button
                    android:layout_width="90dp"
                    android:layout_height="22dp"
                    android:id="@+id/btn_chart_room"
                    android:layout_marginHorizontal="5dp"
                    style="@style/ButtonChartUnselected"
                    android:text="스터디룸별" />
            </LinearLayout>


        </ScrollView>
        <com.github.mikephil.charting.charts.BarChart
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/chart_study_time"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/layout2" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>