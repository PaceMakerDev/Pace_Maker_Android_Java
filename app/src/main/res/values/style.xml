<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SpinnerDatePickerStyle" parent="android:Theme.Material.Dialog">
        <item name="android:datePickerStyle">@style/SpinnerDatePicker</item>
    </style>
    <style name="SpinnerDatePicker" parent="android:Widget.Material.DatePicker">
        <item name="android:datePickerMode">spinner</item>
    </style>



    <!--Button-->
    <style name="ButtonStyle">
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/nanum_gothic_extra_bold_font</item>
    </style>
    <style name="ButtonFilled" parent="ButtonStyle">
        <item name="android:background">@drawable/button_filled_maintheme</item>
        <item name="android:textColor">@color/buttonFilledText</item>
    </style>
    <style name="ButtonLine" parent="ButtonStyle">
        <item name="android:background">@drawable/button_line_maintheme</item>
        <item name="android:textColor">@color/buttonLineText</item>
    </style>
    <style name="ButtonDisabled" parent="ButtonStyle">
        <item name="android:background">@drawable/button_filled_disabled</item>
        <item name="android:textColor">@color/buttonDisabledText</item>
    </style>
    <style name="ButtonChart">
        <item name="fontFamily">@font/nanum_gothic_extra_bold_font</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColor">@color/buttonChartSelected</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/edittext_with_hint</item>
    </style>
    <style name="ButtonChartUnselected" parent="ButtonChart">
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/buttonChartUnselected</item>
    </style>

    <!--EditText-->
    <style name="EditTextWithHint">
        <item name="android:background">@drawable/edittext_with_hint</item>
        <item name="android:textColor">@color/inputText</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:fontFamily">@font/nanum_gothic_font</item>
    </style>
    <style name="AuthSignUpEditViewStyle" parent="@style/EditTextWithHint">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColorHint">@color/signUpHint</item>
        <item name="android:layout_marginBottom">7dp</item>
    </style>
    <style name="AuthLoginEditViewStyle" parent="@style/EditTextWithHint">
        <item name="android:textColorHint">@color/loginHint</item>
        <item name="android:layout_marginBottom">7dp</item>
    </style>

    <!--TextView-->
    <style name="ErrorText">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColor">@color/error</item>
        <item name="android:visibility">gone</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="fontFamily">@font/nanum_gothic_font</item>
    </style>
    <style name="AuthTitle">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/title</item>
        <item name="fontFamily">@font/nanum_gothic_font</item>
    </style>
    <style name="AuthInputText">
        <item name="android:fontFamily">@font/nanum_gothic_font</item>
        <item name="android:textColor">@color/inputText</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
    </style>
    <style name="AuthInputGuideStyle" parent="AuthInputText">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/nanum_gothic_extra_bold_font</item>
    </style>
    <style name="SubTitleStyle">
        <item name="android:textColor">@color/title</item>
        <item name="android:textSize">@dimen/sub_title</item>
        <item name="android:fontFamily">@font/nanum_gothic_extra_bold_font</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="my_study_ranking" parent="nanum_bold_small_white">
        <item name="maxLines">1</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- Base -->
    <style name="nanum_bold_small_white">
        <item name="android:fontFamily">@font/nanum_gothic</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColor">#ffffff</item>
    </style>

</resources>